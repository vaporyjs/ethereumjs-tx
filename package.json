{
  "name": "vaporyjs-tx",
  "namespace": "vaporyjs",
  "version": "1.0.0",
  "description": "An simple module for creating, manipulating and signing vapory transactions",
  "main": "index.js",
  "scripts": {
    "coverage": "istanbul cover ./test/index.js",
    "coveralls": "npm run coverage && coveralls <coverage/lcov.info",
    "lint": "standard",
    "test": "npm run test:node && npm run test:browser",
    "test:browser": "karma start karma.conf.js",
    "test:node": "tape ./test/index.js",
    "build": "browserify --s VapTx index.js > ./dist/vaporyjs-tx.js",
    "build:docs": "documentation --github  -f md ./index.js > ./docs/index.md"
  },
  "keywords": [
    "vapory",
    "transactions"
  ],
  "author": "mjbecze <mb@ethdev.com>",
  "license": "MPL-2.0",
  "dependencies": {
    "vapory-common": "0.0.16",
    "vaporyjs-util": "4.0.1"
  },
  "devDependencies": {
    "async": "^1.4.2",
    "browserify": "^13.0.0",
    "coveralls": "^2.11.4",
    "documentation": "^3.0.4",
    "vaporyjs-testing": "0.0.1",
    "istanbul": "^0.4.1",
    "karma": "^0.13.15",
    "karma-browserify": "^5.0.0",
    "karma-detect-browsers": "^2.0.2",
    "karma-env-preprocessor": "^0.1.1",
    "karma-firefox-launcher": "^0.1.7",
    "karma-tap": "^1.0.3",
    "minimist": "^1.2.0",
    "standard": "^6.0.4",
    "tape": "^4.0.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vaporyjs/vaporyjs-tx.git"
  },
  "bugs": {
    "url": "https://github.com/vaporyjs/vaporyjs-tx/issues"
  },
  "homepage": "https://github.com/vaporyjs/vaporyjs-tx",
  "standard": {
    "ignore": [
      "dist/**",
      "package-init.js",
      "package.js"
    ]
  }
}
